@model TravelerShop.Web.Models.LoginData
@{
    ViewBag.Title = "SignIn";
    Layout = null;
}
<!DOCTYPE html>
<html>
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <meta name="description" content="Responsive Bootstrap4 Shop Template, Created by Imran Hossain from https://imransdesign.com/">

    <!-- title -->
    <title>TravelerShop</title>

    <!-- fontawesome -->
    <link rel="stylesheet" href="~/wwwroot/css/scss/Style.css">
</head>
<body>
    <div class="login_form">
        <setion class="login-wrapper">

            <div class="logo">
                <a target="_blank" rel="noopener" href="https://unrealnavigation.com">
                    <img src="https://unrealnavigation.com/_themes/unrealnavigation/img/unreal-navigation-logo.png?v=1474018625" alt="">
                </a>
            </div>

            @using (Html.BeginForm("SignIn", "Login", FormMethod.Post))
            {
                @Html.AntiForgeryToken()
                <a href="@Url.Action("Index", "Login")">Регистрация</a>
                <a href="@Url.Action("LogOut", "Login")">Выйти</a>
                <label>User Name</label>

                @Html.TextBoxFor(m => m.Username, new { @required = "required" })

                <label>Password</label>
                @Html.TextBoxFor(m => m.Password, new { @type = "password", @required = "required" })

                <div class="hide-show">
                    <span>Show</span>
                </div>
                <button type="submit">Sign In</button>
            }
        </setion>
    </div>
</body>
</html>