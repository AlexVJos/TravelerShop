@model TravelerShop.Domain.Entities.Product.ProductDataModel
@{
    ViewBag.Title = "Edit";
    Layout = "~/Views/Shared/_AddEditLayout.cshtml";
}
<div class="container mt-100">
    <div class="row">
        <div class="col-lg-12">
            <h1 class="text-center mt-5 mb-4">Редактировать товар</h1>
            @using (Html.BeginForm("Edit", "Product", FormMethod.Post, new { enctype = "multipart/form-data" }))
            {
                @Html.AntiForgeryToken()
                @Html.HiddenFor(m => m.SingleProduct.ProductId)
                <div class="form-group">
                    <label for="name">Название товара:</label>
                    @Html.TextBoxFor(m => m.SingleProduct.Name, new { @class = "form-control", @required = "required" })
                </div>
                <div class="form-group">
                    <label for="description">Описание товара:</label>
                    @Html.TextAreaFor(m => m.SingleProduct.Description, new { @class = "form-control", @required = "required" })
                </div>
                <div class="form-group">
                    <label for="price">Цена товара:</label>
                    @Html.TextBoxFor(model => model.SingleProduct.Price, new { @class = "form-control", @type = "number", @step = "0.01", @required = "required" })
                </div>
                <div class="form-group">
                    <label for="category">Категория товара:</label>
                    @Html.DropDownListFor(m => m.SingleProduct.Category, new SelectList(Enum.GetValues(typeof(TravelerShop.Domain.Enums.PCategory))), new { @class = "form-control", @required = "required" })
                </div>
                <div class="form-group">
                    <label for="image">Изображение товара:</label>
                    @*<img src="data:image;base64,@Convert.ToBase64String(Model.SingleProduct.Image)" alt="Product Image">*@
                    <input type="file" id="imageFile" name="imageFile" class="form-control-file" accept="image/*" required>
                </div>
                <div class="form-group">
                    <label for="quantity">Наличие на складе:</label>
                    @Html.TextBoxFor(m => m.SingleProduct.Amount, new { @type = "number", @class = "form-control", @required = "required" })
                </div>
                <button type="submit" class="sbm-btn">Сохранить изменения</button>
            }
        </div>
    </div>
</div>