@model TravelerShop.Web.Models.ProductData
@{
    ViewBag.Title = "AddNewProduct";
    Layout = "~/Views/Shared/_AddEditLayout.cshtml";
}
<!-- main content area -->
<div class="container mt-100">
    <div class="row">
        <div class="col-lg-12">
            <h1 class="text-center mt-5 mb-4">Добавить новый товар</h1>
            @using (Html.BeginForm("AddNewProduct", "Product", FormMethod.Post, new { enctype = "multipart/form-data" }))
            {
                @Html.AntiForgeryToken()
                <div class="form-group">
                    <label for="name">Название товара:</label>
                    @Html.TextBoxFor(m => m.Name, new { @class = "form-control", @required = "required" })
                </div>
                <div class="form-group">
                    <label for="description">Описание товара:</label>
                    @Html.TextAreaFor(m => m.Description, new { @class = "form-control", @required = "required" })
                </div>
                <div class="form-group">
                    <label for="price">Цена товара:</label>
                    @Html.TextBoxFor(model => model.Price, new { @class = "form-control", @type = "number", @step = "0.01", @required = "required" })
                </div>
                <div class="form-group">
                    <label for="category">Категория товара:</label>
                    @Html.DropDownListFor(m => m.Category, new SelectList(Enum.GetValues(typeof(TravelerShop.Domain.Enums.PCategory))), new { @class = "form-control", @required = "required" })
                </div>
                <div class="form-group">
                    <label for="image">Изображение товара:</label>
                    @*@Html.TextBoxFor(m => m.Image, new {@type = "file", @class = "form-control-file", @accept = "image/*" })*@
                    <input type="file" id="imageFile" name="imageFile" class="form-control-file" accept="image/*" required>
                </div>
                <div class="form-group">
                    <label for="quantity">Наличие на складе:</label>
                    @Html.TextBoxFor(m => m.Amount, new { @type = "number", @class = "form-control", @required = "required" })
                </div>
                <button type="submit" class="sbm-btn">Добавить товар</button>
            }
        </div>
    </div>
</div>