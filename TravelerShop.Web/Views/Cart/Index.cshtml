@model TravelerShop.Domain.Entities.Cart.DBModel.Cart
@{
    ViewBag.Title = "Cart";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<!-- breadcrumb-section -->
<div class="breadcrumb-section breadcrumb-bg">
    <div class="container">
        <div class="row">
            <div class="col-lg-8 offset-lg-2 text-center">
                <div class="breadcrumb-text">
                    <p>Fresh and Organic</p>
                    <h1>Cart</h1>
                </div>
            </div>
        </div>
    </div>
</div>
<!-- end breadcrumb section -->
<!-- cart -->
<div class="cart-section mt-150 mb-150">
    <div class="container">

            @using (Html.BeginForm("Update", "Cart", FormMethod.Post, new {@class="row"}))
            {
                <div class="col-lg-8 col-md-12">
                    <div class="cart-table-wrap">
                        <table class="cart-table">
                            <thead class="cart-table-head">
                                <tr class="table-head-row">
                                    <th class="product-remove"></th>
                                    <th class="product-image">Product Image</th>
                                    <th class="product-name">Name</th>
                                    <th class="product-price">Price</th>
                                    <th class="product-quantity">Quantity</th>
                                    <th class="product-total">Total</th>
                                </tr>
                            </thead>
                            <tbody>
                                @*@foreach (var item in Model.Items)*@
                                @for (int i = 0; i < Model.Items.Count; i++)
                                {
                                    <tr class="table-body-row">

                                        <td class="product-remove"><a href="@Url.Action("Delete", "Cart", new { id = Model.Items[i].Id })"><i class="far fa-window-close"></i></a></td>
                                        <td class="product-image">
                                            <a href="@Url.Action("SingleProduct", "Product", new { id = Model.Items[i].ProductId })">
                                                <img src="data:image;base64,@Convert.ToBase64String(Model.Items[i].Image)" alt="">
                                            </a>
                                        </td>
                                        <td class="product-name">@Model.Items[i].Name</td>
                                        <td class="product-price">$@Model.Items[i].Price</td>
                                        <td class="product-quantity">
                                            @Html.HiddenFor(m => m.Items[i].Id)
                                            @Html.TextBoxFor(m => m.Items[i].Quantity, new { @type = "number", @min = "1" })
                                            @*<input type="number" name="Items[@item.Id].Quantity" value="@item.Quantity" placeholder="@item.Quantity">*@
                                        </td>
                                        <td class="product-total">$@Model.Items[i].SubTotal</td>
                                    </tr>
                                    
                                }
                            </tbody>
                        </table>
                    </div>
                </div>

                <div class="col-lg-4">
                    <div class="total-section">
                        <table class="total-table">
                            <thead class="total-table-head">
                                <tr class="table-total-row">
                                    <th>Total</th>
                                    <th>Price</th>
                                </tr>
                            </thead>
                            <tbody>
                                <tr class="total-data">
                                    <td><strong>Subtotal: </strong></td>
                                    <td>$@Model.Total</td>
                                </tr>
                                <tr class="total-data">
                                    <td><strong>Shipping: </strong></td>
                                    <td>$10</td>
                                </tr>
                                <tr class="total-data">
                                    <td><strong>Total: </strong></td>
                                    <td>$@(Model.Total + 10)</td>
                                </tr>
                            </tbody>
                        </table>
                        <div class="cart-buttons">

                                <button type="submit" class="sbm-btn">Update Cart</button>

                            @*<a href="cart.html" class="boxed-btn">Update Cart</a>*@
                            <a href="@Url.Action("Checkout", "Home")" class="boxed-btn black">Check Out</a>
                        </div>
                    </div>

                    <div class="coupon-section">
                        <h3>Apply Coupon</h3>
                        <div class="coupon-form-wrap">
                            <form action="index.html">
                                <p><input type="text" placeholder="Coupon"></p>
                                <p><input type="submit" value="Apply"></p>
                            </form>
                        </div>
                    </div>
                </div>
            }

    </div>
</div>
<!-- end cart -->
<!-- logo carousel -->
<div class="logo-carousel-section">
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <div class="logo-carousel-inner">
                    <div class="single-logo-item">
                        <img src="assets/img/company-logos/1.png" alt="">
                    </div>
                    <div class="single-logo-item">
                        <img src="assets/img/company-logos/2.png" alt="">
                    </div>
                    <div class="single-logo-item">
                        <img src="assets/img/company-logos/3.png" alt="">
                    </div>
                    <div class="single-logo-item">
                        <img src="assets/img/company-logos/4.png" alt="">
                    </div>
                    <div class="single-logo-item">
                        <img src="assets/img/company-logos/5.png" alt="">
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<!-- end logo carousel -->